<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fragment_account_error_verify_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="@string/fragment_row_account_verify_error"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/fragment_account_row_text_error_size" />

                <Button
                    android:id="@+id/fragment_account_send_verify_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/send_again" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/fragment_account_error_verify_container"
                android:alpha="0.87"
                android:text="@string/fragment_row_account_info"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_account_row_text_info_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_account_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView3"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp" />

            <FrameLayout
                android:id="@+id/fragment_account_frame_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_account_recycler_view"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                tools:layout_height="100dp">

            </FrameLayout>
        </RelativeLayout>

</ScrollView>