<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_sponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/fragment_news_row_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="@integer/fragment_sponsor_column_count" />

            <GridLayout
                android:id="@+id/fragment_news_row_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="@integer/fragment_sponsor_column_count">

            </GridLayout>

            <GridLayout
                android:id="@+id/fragment_news_row_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="@integer/fragment_sponsor_column_count" />

            <GridLayout
                android:id="@+id/fragment_news_row_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="@integer/fragment_sponsor_column_count">

            </GridLayout>

            <GridLayout
                android:id="@+id/fragment_news_row_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="@integer/fragment_sponsor_column_count" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>