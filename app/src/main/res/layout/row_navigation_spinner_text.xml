<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navigation_item_icon_margin_left_right"
        android:layout_marginRight="@dimen/navigation_item_icon_margin_left_right"
        android:alpha="0.54"
        app:srcCompat="@drawable/ic_navigation_item" />

    <TextView
        android:id="@+id/spinner_text_initials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2"
        android:gravity="center"
        android:text="MM"
        android:textColor="@color/white"
        android:textSize="@dimen/navigation_login_text_icon_size" />

    <TextView
        android:id="@+id/spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0.87"
        android:layout_marginStart="@dimen/navigation_item_text_left_margin"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="@dimen/navigation_text_size" />
</RelativeLayout>