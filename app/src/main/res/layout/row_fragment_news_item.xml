<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_padding"
    android:background="@color/white"
    android:elevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/row_fragment_news_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:alpha="0.54"
            android:paddingStart="@dimen/card_media_title_message_padding"
            android:paddingTop="@dimen/card_media_title_message_padding_v2"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/card_subtitle_text_size" />

        <ImageView
            android:id="@+id/row_fragment_news_item_image_view"
            android:layout_width="@dimen/card_media_area_size"
            android:layout_height="@dimen/card_media_area_size"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/card_media_title_message_padding"
            android:paddingTop="@dimen/card_media_title_message_padding"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/row_fragment_news_item_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_fragment_news_item_message"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fragment_news_background_indicator"
            android:clickable="true"
            android:elevation="@dimen/card_elevation"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="@dimen/card_media_title_message_padding"
            app:srcCompat="@drawable/group_indicator"/>

        <TextView
            android:id="@+id/row_fragment_news_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_fragment_news_item_image_view"
            android:alpha="0.87"
            android:maxLines="6"
            android:paddingEnd="@dimen/card_media_title_message_padding"
            android:paddingStart="@dimen/card_media_title_message_padding"
            android:paddingTop="@dimen/card_padding"
            android:textColor="@color/black"
            tools:text="" />

    </RelativeLayout>


</android.support.v7.widget.CardView>