<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fragment_news_item_top_bottom_padding"
    android:paddingEnd="@dimen/fragment_news_row_left_padding"
    android:paddingStart="@dimen/fragment_news_row_left_padding"
    android:paddingTop="@dimen/fragment_news_item_top_bottom_padding">

    <TextView
        android:id="@+id/row_fragment_news_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.80"
        android:paddingBottom="@dimen/fragment_news_item_text_bottom_padding"
        android:text="TextView"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/row_fragment_news_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_wg" />
</LinearLayout>