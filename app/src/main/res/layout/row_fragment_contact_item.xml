<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_contact_row_item_height">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_fragment_contact_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/fragment_contact_row_avatar_vertical_padding"
            android:layout_marginRight="@dimen/fragment_contact_row_avatar_vertical_padding"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo_wg_kwadrat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/row_fragment_contact_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_fragment_contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/fragment_contact_row_text_left_padding"
            android:layout_marginRight="@dimen/fragment_contact_text_right_padding"
            android:alpha="0.87"
            android:textColor="@color/black"
            android:textSize="@dimen/fragment_contact_row_first_text_size"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/row_fragment_contact_icon"
            tools:text="ImiÄ™ i nazwisko" />

        <TextView
            android:id="@+id/row_fragment_contact_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:alpha="0.67"
            android:textColor="@color/black"
            android:textSize="@dimen/fragment_contact_row_second_text_size"
            app:layout_constraintLeft_toLeftOf="@+id/row_fragment_contact_name"
            app:layout_constraintRight_toRightOf="@+id/row_fragment_contact_name"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            tools:text="Rola" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.503" />

        <ImageView
            android:id="@+id/row_fragment_contact_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="@dimen/fragment_contact_row_icon_right_padding"
            android:layout_marginTop="0dp"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_email"
            app:layout_constraintVertical_bias="0.48000002" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>