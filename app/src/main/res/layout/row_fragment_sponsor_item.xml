<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/card_padding"
    android:elevation="@dimen/card_elevation"
    android:padding="@dimen/card_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/row_fragment_sponsor_logo"
            android:layout_centerInParent="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_fragment_sponsor_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_sponsor_row_name_min_height"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/fragment_sponsor_row_name_padding_vertical"
                android:paddingStart="@dimen/fragment_sponsor_row_name_padding_vertical"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_sponsor_row_name_text_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/row_fragment_sponsor_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/logo_wg" />
    </RelativeLayout>
</android.support.v7.widget.CardView>