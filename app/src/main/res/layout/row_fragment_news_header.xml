<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_news_header_height"
    android:layout_gravity="center_vertical"
    android:paddingBottom="@dimen/fragment_news_header_top_bottom_padding"
    android:paddingEnd="@dimen/fragment_news_row_left_padding"
    android:paddingStart="@dimen/fragment_news_row_left_padding"
    android:paddingTop="@dimen/fragment_news_header_top_bottom_padding">

    <TextView
        android:id="@+id/row_fragment_news_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_news_indicator_text_size"
        android:layout_alignParentStart="true"
        android:alpha="0.87"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/fragment_news_header_text_size" />

    <ImageView
        android:id="@+id/row_fragment_news_header_indicator"
        android:layout_width="@dimen/fragment_news_indicator_text_size"
        android:layout_height="@dimen/fragment_news_indicator_text_size"
        android:layout_alignParentEnd="true"
        android:alpha="0.38"
        android:src="@drawable/group_indicator" />
</RelativeLayout>